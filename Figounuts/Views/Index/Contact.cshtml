@model Figounuts.Models.PresentationModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Contenu principal -->
    <main class="flex-grow-1">
        <div class="container my-5">
            @Html.Partial("_HeaderAndNav", Model)

            <div id="Contact" class="tab-pane">
                <h2 class="my-4">@Model.Content["ContactUs"]</h2>
                <form method="post" action="@Url.Action("SendContact", "Index")">
                    <div class="mb-3">
                        <label for="Name" class="form-label">@Model.Content["Name"]</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="form-label">@Model.Content["Phone"]</label>
                        <input type="tel" class="form-control" id="Phone" name="Phone" required>
                    </div>
                    <div class="mb-3">
                        <label for="Message" class="form-label">@Model.Content["Message"]</label>
                        <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">@Model.Content["SendButton"]</button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    @Html.Partial("_Footer", Model)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
