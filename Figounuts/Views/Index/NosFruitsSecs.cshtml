@model Figounuts.Models.PresentationModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nos Fruits Secs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="container my-5">
        @Html.Partial("_HeaderAndNav", Model)

        <!-- Main Content -->
        <div class="mb-4" style="position: relative; width: 100%; height: 300px; overflow: hidden;">
            <img src="@Url.Content(Model.NosFruitsSecsModel.MainImage)" alt="Figounuts" class="img-fluid w-100 h-100" style="object-fit: cover;">
        </div>

        <div class="row g-3">
            @foreach (var fruit in Model.NosFruitsSecsModel.FruitImages.Select((value, index) => new { value, index }))
            {
                <div class="col-6 col-sm-4 col-md-3">
                    <div class="text-center">
                        <img src="@Url.Content(fruit.value.ImagePath)" alt="Fruit @fruit.index" class="img-fluid rounded">
                        <p>@fruit.value.Text</p>
                    </div>
                </div>
            }
        </div>
    </div>
    @Html.Partial("_Footer", Model)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
